<%- include('partials/main/header') %>

<!-- Hero -->
<section id="hero" class="h-screen flex items-center justify-center bg-cover bg-center bg-no-repeat relative overflow-hidden" style="background-image: url(/images/hero_section.jpg);">
  <!-- Dynamic Background Overlay -->
  <div class="absolute inset-0 bg-gradient-to-b from-black/20 via-black/50 to-black/30"></div>
  


  <!-- Main Content -->
  <div class="relative z-10 text-center px-4">
    <div class="  p-8 md:p-12 rounded-xl inline-block  shadow-2xl">
      <h1 class="text-5xl md:text-7xl font-extrabold text-white tracking-tight leading-tight mb-4">
        <span class=" text-white">
          Modern Mimariyle Tanışın
        </span>
      </h1>
      <div class="flex justify-center gap-4 mt-8 flex-wrap">

      </div>
    </div>
  </div>

  <!-- Stats Bar -->
  <div class="absolute bottom-0 left-0 right-0 bg-black/70 text-white py-4">
    <div class="container mx-auto flex justify-around text-center">
      <div class="px-4">
        <div class="text-3xl font-bold" id="projects-counter">6</div>
        <div class="text-sm uppercase tracking-wider">Tamamlanan Proje</div>
      </div>
      <div class="px-4">
        <div class="text-3xl font-bold">15+</div>
        <div class="text-sm uppercase tracking-wider">Deneyim Yılı</div>
      </div>
    </div>
  </div>

  <!-- Scroll Indicator -->
  <div class="absolute bottom-8 left-1/2 -translate-x-1/2 z-20 group cursor-pointer" onclick="scrollToNext()">
</section>

<!-- About -->
<section id="about" class="scroll-mt-20 py-20 px-6 max-w-6xl mx-auto">
  <div class="grid md:grid-cols-2 gap-12 items-center">
    <div>
      <h2 class="text-4xl font-semibold mb-6" data-aos="fade-up">Hakkımızda</h2>
      <p class="text-lg leading-relaxed mb-6" data-aos="fade-up">
        <strong>KOTANLAR İNŞAAT</strong>, sektörün köklü firmalarından biri olarak 2006 yılında Kuşadası'nda kurulmuştur. Modern ve kaliteli yaşam alanları sunmayı ilke edinmiştir.
      </p>
      <ul class="space-y-3 mb-6" data-aos="fade-up">
        <li class="flex items-start">
          <svg class="h-5 w-5 text-green-500 mt-1 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
          </svg>
          <span>15+ Yıllık Sektör Deneyimi</span>
        </li>
        <li class="flex items-start">
          <svg class="h-5 w-5 text-green-500 mt-1 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
          </svg>
          <span>Kişiye Özel Yardım</span>
        </li>
        <li class="flex items-start">
          <svg class="h-5 w-5 text-green-500 mt-1 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
          </svg>
          <span>%100 Müşteri Memnuniyeti</span>
        </li>
      </ul>
      <div data-aos="fade-up">
        <a href="#contact" class="inline-block bg-[#1c1c1c] text-white px-6 py-3 rounded-lg font-medium hover:bg-opacity-90 transition">Bizimle Çalışın</a>
      </div>
    </div>
    <div class="relative" data-aos="fade-left">
      <img src="/images/construction.jpg" alt="Construction Site" class="rounded-xl shadow-2xl">
      <div class="absolute -bottom-6 -right-6 bg-white p-4 rounded-lg shadow-lg hidden md:block">
        <div class="text-3xl font-bold text-[#1c1c1c]">15+</div>
        <div class="text-sm">Yıllık Deneyim</div>
      </div>
    </div>
  </div>
</section>

<!-- Projects -->
<section id="projects" class="py-20 px-6 bg-white">
  <div class="max-w-6xl mx-auto">
    <div class="flex justify-between items-center mb-12">
      <h2 class="text-4xl font-semibold" data-aos="fade-up">Projelerimiz</h2>
    </div>

    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8">
      <% projects.forEach(project => { %>
        <div class="group relative overflow-hidden rounded-xl shadow-lg hover:shadow-xl transition-all duration-300" data-aos="fade-up">
          <a href="/projects/<%= project.slug %>" class="block h-full">
            <img 
              src="<%= project.coverImage %>" 
              alt="<%= project.title %>" 
              class="w-full h-64 object-cover transition-transform duration-500 group-hover:scale-110"
              loading="lazy"
            />
            <div class="absolute inset-0 bg-gradient-to-t from-black/70 via-black/30 to-transparent flex flex-col justify-end p-6">
              <div class="transform translate-y-4 group-hover:translate-y-0 transition-transform duration-300">
                <h3 class="text-white text-xl font-semibold mb-2"><%= project.title %></h3>
                <p class="text-white text-sm mb-4 line-clamp-2"><%= project.summary %></p>
                <span class="inline-flex items-center text-white font-medium group-hover:text-yellow-300 transition">
                  Detaylı Bilgi
                  <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3"></path>
                  </svg>
                </span>
              </div>
            </div>
          </a>
        </div>
      <% }) %>
    </div>
  </div>
</section>



<!-- Process -->
<section class="py-20 bg-white">
  <div class="max-w-6xl mx-auto px-6">
    <h2 class="text-4xl font-semibold mb-12 text-center" data-aos="fade-up">Çalışma Sürecimiz</h2>
    
    <div class="relative">
      <div class="hidden md:block absolute top-1/2 left-0 right-0 h-0.5 bg-gray-200 -translate-y-1/2"></div>
      
      <div class="grid md:grid-cols-4 gap-8 relative">
        <div class="text-center" data-aos="fade-up">
          <div class="w-16 h-16 bg-[#1c1c1c] text-white rounded-full flex items-center justify-center mx-auto mb-4 relative z-10">
            <span class="text-2xl font-bold">1</span>
          </div>
          <h3 class="font-semibold mb-2">Keşif ve Planlama</h3>
          <p class="text-gray-600 text-sm">Proje gereksinimlerinizi belirliyor ve detaylı plan oluşturuyoruz.</p>
        </div>
        
        <div class="text-center" data-aos="fade-up" data-aos-delay="100">
          <div class="w-16 h-16 bg-[#1c1c1c] text-white rounded-full flex items-center justify-center mx-auto mb-4 relative z-10">
            <span class="text-2xl font-bold">2</span>
          </div>
          <h3 class="font-semibold mb-2">Tasarım Onayı</h3>
          <p class="text-gray-600 text-sm">3D modellemelerle projenizi görselleştirip onayınıza sunuyoruz.</p>
        </div>
        
        <div class="text-center" data-aos="fade-up" data-aos-delay="200">
          <div class="w-16 h-16 bg-[#1c1c1c] text-white rounded-full flex items-center justify-center mx-auto mb-4 relative z-10">
            <span class="text-2xl font-bold">3</span>
          </div>
          <h3 class="font-semibold mb-2">İnşaat Süreci</h3>
          <p class="text-gray-600 text-sm">Profesyonel ekiplerimizle titiz bir şekilde inşaatı gerçekleştiriyoruz.</p>
        </div>
        
        <div class="text-center" data-aos="fade-up" data-aos-delay="300">
          <div class="w-16 h-16 bg-[#1c1c1c] text-white rounded-full flex items-center justify-center mx-auto mb-4 relative z-10">
            <span class="text-2xl font-bold">4</span>
          </div>
          <h3 class="font-semibold mb-2">Teslimat</h3>
          <p class="text-gray-600 text-sm">Eksiksiz bir şekilde teslim edip son kontrolleri yapıyoruz.</p>
        </div>
      </div>
    </div>
  </div>
</section>

<!-- CTA Section -->
<section class="py-16 bg-[#1c1c1c] text-white">
  <div class="max-w-4xl mx-auto px-6 text-center">
    <h2 class="text-3xl md:text-4xl font-semibold mb-6" data-aos="fade-up">Projeniz İçin Teklif Alın</h2>
    <p class="text-lg mb-8 max-w-2xl mx-auto" data-aos="fade-up">Profesyonel ekibimiz projeniz hakkında sizi bilgilendirmek için hazır</p>
    <div class="flex flex-col sm:flex-row justify-center gap-4" data-aos="fade-up">
      <a href="#contact" class="bg-white text-[#1c1c1c] px-8 py-3 rounded-full font-semibold hover:bg-gray-100 transition">İletişime Geçin</a>
      <a href="tel:+902566128320" class="border-2 border-white px-8 py-3 rounded-full font-semibold hover:bg-blue-400 transition">Hemen Ara: +90 256 612 8320</a>
    </div>
  </div>
</section>

<!-- Contact -->
<section id="contact" class="py-20 px-6 bg-white">
  <div class="max-w-6xl mx-auto">
    <h2 class="text-4xl font-semibold mb-12 text-center" data-aos="fade-up">İletişim</h2>

    <div class="grid md:grid-cols-2 gap-12 items-start">
      <!-- Contact Info -->
      <div data-aos="fade-right">
        <div class="mb-8">
          <h3 class="text-xl font-semibold mb-4">İletişim Bilgileri</h3>
          <div class="space-y-3">
            <div class="flex items-start">
              <svg class="w-5 h-5 text-[#1c1c1c] mt-1 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
              </svg>
              <span>Aydın, Kuşadası, Türkiye</span>
            </div>
            <div class="flex items-start">
              <svg class="w-5 h-5 text-[#1c1c1c] mt-1 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
              </svg>
              <span>+90 256 612 8320</span>
            </div>
            <div class="flex items-start">
              <svg class="w-5 h-5 text-[#1c1c1c] mt-1 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
              </svg>
              <span>infokotanlaryapi@gmail.com</span>
            </div>
          </div>
        </div>

        <div>
          <h3 class="text-xl font-semibold mb-4">Çalışma Saatleri</h3>
          <div class="space-y-2">
            <div class="flex justify-between">
              <span>Pazartesi - Cuma</span>
              <span>09:00 - 18:00</span>
            </div>
            <div class="flex justify-between">
              <span>Cumartesi</span>
              <span>09:00 - 18:00</span>
            </div>
            <div class="flex justify-between">
              <span>Pazar</span>
              <span>Kapalı</span>
            </div>
          </div>
        </div>
      </div>

      <!-- Contact Form -->
      <div data-aos="fade-left">
        <form id="contactForm" action="/submit" method="POST" class="space-y-6">
          <div class="grid sm:grid-cols-2 gap-6">
            <div>
              <label for="name" class="block mb-1 font-medium">Adınız</label>
              <input type="text" id="name" name="name" required class="w-full px-4 py-3 border rounded-lg focus:outline-none focus:ring-2 focus:ring-[#1c1c1c]">
            </div>
            <div>
              <label for="email" class="block mb-1 font-medium">Email</label>
              <input type="email" id="email" name="email" required class="w-full px-4 py-3 border rounded-lg focus:outline-none focus:ring-2 focus:ring-[#1c1c1c]">
            </div>
          </div>
          <div>
            <label for="phone" class="block mb-1 font-medium">Telefon</label>
            <input type="tel" id="phone" name="phone" class="w-full px-4 py-3 border rounded-lg focus:outline-none focus:ring-2 focus:ring-[#1c1c1c]">
          </div>
          <div>
            <label for="message" class="block mb-1 font-medium">Mesajınız</label>
            <textarea id="message" name="message" rows="4" class="w-full px-4 py-3 border rounded-lg focus:outline-none focus:ring-2 focus:ring-[#1c1c1c]"></textarea>
          </div>
          <button type="submit" class="w-full bg-[#1c1c1c] text-white py-4 px-6 rounded-lg font-semibold hover:bg-opacity-90 transition">Gönder</button>
        </form>
        <div id="successMessage" class="hidden bg-green-100 text-green-800 px-6 py-4 rounded-lg shadow mt-6 transition-all duration-500">
          ✅ Mesajınız başarıyla gönderildi. En kısa sürede sizinle iletişime geçeceğiz.
        </div>
      </div>
    </div>
  </div>
</section>

<!-- Lightbox Modal -->
<div id="lightbox" class="fixed inset-0 bg-black bg-opacity-90 flex items-center justify-center hidden z-50 p-4">
  <div class="relative max-w-4xl w-full">
    <button id="close-lightbox" class="absolute -top-12 right-0 text-white hover:text-gray-300">
      <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
      </svg>
    </button>
    <img id="lightbox-img" src="" class="w-full rounded-lg shadow-xl">
  </div>
</div>


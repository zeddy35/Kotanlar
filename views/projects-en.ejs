<%- include("partials/path/header-path-en") %>

<section class="pt-[130px] pb-20 px-6 bg-white">
  <div class="max-w-6xl mx-auto">
    <!-- Hero Title Section -->
    <div class="text-center mb-16" data-aos="fade-up">
      <h1 class="text-4xl md:text-6xl font-bold text-gray-900 mb-6 font-serif tracking-tight">
        Our Projects
      </h1>
    </div>
    
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-10">
      <% projects.forEach(project => { %>
        <div 
          class="group relative overflow-hidden rounded-2xl transition-all duration-500 hover:shadow-2xl hover:-translate-y-2"
          data-aos="fade-up"
        >
          <a href="/projects-en/<%= project.slug %>" class="block h-full">
            <!-- Image Container with elegant overlay -->
            <div class="relative h-80 w-full overflow-hidden">
              <img 
                src="<%= project.coverImage %>" 
                alt="<%= project.title_eng %>" 
                class="w-full h-full object-cover transition-all duration-700 group-hover:scale-105"
                loading="lazy"
              >
              
              <!-- Gradient Overlay with subtle animation -->
              <div class="absolute inset-0 bg-gradient-to-t from-black/80 via-black/20 to-transparent 
                        opacity-90 group-hover:opacity-100 transition-opacity duration-500">
              </div>
              
              <!-- Title with elegant typography -->
              <div class="absolute bottom-0 left-0 w-full p-8 transform translate-y-0 
                         group-hover:translate-y-0 transition-transform duration-500">
                <h3 class="text-2xl font-medium text-white font-serif leading-tight">
                  <%= project.title_eng %>
                </h3>
              </div>
            </div>
          </a>
        </div>
      <% }) %>
    </div>
  </div>
</section>

<%- include("partials/path/footer-path") %>
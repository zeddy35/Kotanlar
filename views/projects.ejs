<%- include("partials/header-other") %>

<section class="pt-[130px] pb-20 px-6 bg-white">
  <div class="max-w-6xl mx-auto">
    <!-- Hero Title Section -->
    <div class="text-center mb-16" data-aos="fade-up">
      <h1 class="text-4xl md:text-5xl font-bold text-gray-800 mb-4">Projelerimiz</h1>
      <div class="w-20 h-1 bg-[#1c1c1c] mx-auto mb-6"></div>
      <p class="text-lg md:text-xl text-gray-600 max-w-3xl mx-auto">
        Gerçekleştirdiğimiz önemli projeler ve başarı hikayelerimiz
      </p>
    </div>
    
  </div>
    
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8">
  <% projects.forEach(project => { %>
    <div class="group relative overflow-hidden rounded-xl shadow-lg hover:shadow-xl transition-all duration-300" data-aos="fade-up">
      <a href="/projects/<%= project.slug %>" class="block">
        <!-- Image Container -->
        <div class="relative overflow-hidden h-72">
          <img 
            src="<%= project.image.url || project.image %>" 
            alt="<%= project.title %>" 
            class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-110"
            loading="lazy"
          >
          <!-- Hover Overlay -->
          <div class="absolute inset-0 bg-gradient-to-t from-black/70 via-black/40 to-transparent flex flex-col justify-end p-6">
            <div class="transform translate-y-4 group-hover:translate-y-0 transition-transform duration-300">
              <h3 class="text-white text-xl font-bold mb-2">
                <%= project.title %>
              </h3>
              <% if(project.summary) { %>
                <p class="text-gray-200 text-sm line-clamp-2 mb-3">
                  <%= project.summary %>
                </p>
              <% } %>
              <span class="inline-flex items-center text-white font-medium group-hover:text-[#578FCA] transition">
                Detayları Gör
                <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3"></path>
                </svg>
              </span>
            </div>
          </div>
          <!-- Status Badge -->
          <% if(project.status) { %>
            <div class="absolute top-4 right-4 <%= project.status === 'completed' ? 'bg-green-500' : 'bg-yellow-500' %> text-white text-xs font-bold px-3 py-1 rounded-full">
              <%= project.status === 'completed' ? 'Tamamlandı' : 'Devam Ediyor' %>
            </div>
          <% } %>
        </div>
      </a>

      <!-- Project Info -->
      <div class="bg-white p-6">
        <div class="flex justify-between items-start mb-2">
          <h3 class="text-lg font-bold text-gray-800">
            <%= project.title %>
          </h3>
          <% if(project.year) { %>
            <span class="text-xs text-gray-500">
              <%= project.year %>
            </span>
          <% } %>
        </div>
        <% if(project.location) { %>
          <p class="text-gray-600 text-sm mb-4 line-clamp-2">
            <%= project.location %>
          </p>
        <% } %>
        <% if(project.tags && Array.isArray(project.tags)) { %>
          <div class="flex flex-wrap gap-2">
            <% project.tags.forEach(tag => { %>
              <% if(typeof tag === 'string') { %>
                <span class="text-xs bg-gray-100 text-gray-800 px-2 py-1 rounded">
                  <%= tag %>
                </span>
              <% } %>
            <% }) %>
          </div>
        <% } %>
      </div>
    </div>
  <% }) %>
</div>
    
   

  </div>
</section>

<%- include("partials/footer-other") %>

<!-- Animation Script -->
<script>
  // Initialize AOS animations
  document.addEventListener('DOMContentLoaded', function() {
    AOS.init({
      duration: 800,
      easing: 'ease-in-out',
      once: true
    });
  });
</script>
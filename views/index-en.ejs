<!-- CTA Section -->
<section class="py-16 bg-[#1c1c1c] text-white">
  <div class="max-w-4xl mx-auto px-6 text-center">
    <h2 class="text-3xl md:text-4xl font-semibold mb-6" data-aos="fade-up">Get Pricing For Your Project</h2>
    <p class="text-lg mb-8 max-w-2xl mx-auto" data-aos="fade-up">Our professional team is ready to contact you</p>
    <div class="flex flex-col sm:flex-row justify-center gap-4" data-aos="fade-up">
      <a href="#contact" class="bg-white text-[#1c1c1c] px-8 py-3 rounded-full font-semibold hover:bg-gray-100 transition">Contact Now</a>
      <a href="tel:+902566128320" class="border-2 border-white px-8 py-3 rounded-full font-semibold hover:bg-blue-400 transition">Call Now: +90 256 612 8320</a>

  <div class="max-w-6xl mx-auto">
    <h2 class="text-4xl font-semibold mb-12 text-center" data-aos="fade-up">Contact</h2>

    <div class="grid md:grid-cols-2 gap-12 items-start">
      <!-- Contact Info -->
      <div data-aos="fade-right">
        <div class="mb-8">
          <h3 class="text-xl font-semibold mb-4">Contact Info</h3>
          <div class="space-y-3">
            <div class="flex items-start">
              <svg class="w-5 h-5 text-[#1c1c1c] mt-1 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
              </svg>
              <span>Aydin, Kusadasi, Turkey</span>
            </div>
            <div class="flex items-start">
              <svg class="w-5 h-5 text-[#1c1c1c] mt-1 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
              </svg>
              <span>+90 256 612 8320</span>
            </div>
            <div class="flex items-start">
              <svg class="w-5 h-5 text-[#1c1c1c] mt-1 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
              </svg>
              <span>infokotanlaryapi@gmail.com</span>
            </div>
          </div>
        </div>

        <div>
          <h3 class="text-xl font-semibold mb-4">Working Hours</h3>
          <div class="space-y-2">
            <div class="flex justify-between">
              <span>Monday - Friday</span>
              <span>09:00 - 18:00</span>
            </div>
            <div class="flex justify-between">
              <span>Saturday</span>
              <span>09:00 - 18:00</span>
            </div>
            <div class="flex justify-between">
              <span>Sunday</span>
              <span>Closed</span>
            </div>
          </div>
        </div>
      </div>
      
      <input type="text" name="website" style="display:none">

      <!-- Contact Form -->
      <div data-aos="fade-left">
        <form id="contactForm" action="/submit" method="POST" class="space-y-6">
          <div class="grid sm:grid-cols-2 gap-6">
            <div>
              <label for="name" class="block mb-1 font-medium">Full Name</label>
              <input type="text" id="name" name="name" required class="w-full px-4 py-3 border rounded-lg focus:outline-none focus:ring-2 focus:ring-[#1c1c1c]">
            </div>
            <div>
              <label for="email" class="block mb-1 font-medium">Email</label>
              <input type="email" id="email" name="email" required class="w-full px-4 py-3 border rounded-lg focus:outline-none focus:ring-2 focus:ring-[#1c1c1c]">
            </div>
          </div>
          <div>
            <label for="phone" class="block mb-1 font-medium">Phone Number</label>
            <input type="tel" id="phone" name="phone" class="w-full px-4 py-3 border rounded-lg focus:outline-none focus:ring-2 focus:ring-[#1c1c1c]">
          </div>
          <div>
            <label for="message" class="block mb-1 font-medium">Message</label>
            <textarea id="message" name="message" rows="4" class="w-full px-4 py-3 border rounded-lg focus:outline-none focus:ring-2 focus:ring-[#1c1c1c]"></textarea>
          </div>
          <button type="submit" class="w-full bg-[#1c1c1c] text-white py-4 px-6 rounded-lg font-semibold hover:bg-blue-400 hover:bg-opacity-50 transition">Send</button>
        </form>
      </div>
    </div>
  </div>
</section>


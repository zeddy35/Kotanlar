<%- include('partials/main/header-en') %>

<!-- Hero -->
<section id="hero" class="h-screen flex items-center justify-center bg-cover bg-center bg-no-repeat relative overflow-hidden" style="background-image: url(/images/hero_section.jpg);">
  <!-- Dynamic Background Overlay -->
  <div class="absolute inset-0 bg-gradient-to-b from-black/20 via-black/50 to-black/30"></div>
  


  <!-- Main Content -->
  <div class="relative z-10 text-center px-4">
    <div class="  p-8 md:p-12 rounded-xl inline-block  shadow-2xl">
      <h1 class="text-5xl md:text-7xl font-extrabold text-white tracking-tight leading-tight mb-4">
        <span class=" text-white">
          Discover Modern Architecture
        </span>
      </h1>
      <div class="flex justify-center gap-4 mt-8 flex-wrap">

      </div>
    </div>
  </div>

  <!-- Stats Bar -->
  <div class="absolute bottom-0 left-0 right-0 bg-black/70 text-white py-4">
    <div class="container mx-auto flex justify-around text-center">
      <div class="px-4">
        <div class="text-3xl font-bold" id="projects-counter">6</div>
        <div class="text-sm uppercase tracking-wider">Completed Projects</div>
      </div>
      <div class="px-4">
        <div class="text-3xl font-bold">15+</div>
        <div class="text-sm uppercase tracking-wider">Years of Expertise</div>
      </div>
      <div id="scroll-btn" class="absolute bottom-8 left-1/2 -translate-x-1/2 z-20 group cursor-pointer">
        <svg class="w-6 h-6 text-white animate-bounce" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
        </svg>
      </div>
    </div>
  </div>
</section>

<!-- About -->
<section id="about_en" class="scroll-mt-20 py-20 px-6 max-w-6xl mx-auto">
  <div class="grid md:grid-cols-2 gap-12 items-center">
    <div>
      <h2 class="text-4xl font-semibold mb-6" data-aos="fade-up">About Us</h2>
      <p class="text-lg leading-relaxed mb-6" data-aos="fade-up">
        <strong>KOTANLAR Construction</strong>, established in 2006 in Kuşadası as one of the industry's most established firms, our company has adopted the principle of delivering modern and quality living spaces.
      </p>
      <ul class="space-y-3 mb-6" data-aos="fade-up">
        <li class="flex items-start">
          <svg class="h-5 w-5 text-green-500 mt-1 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
          </svg>
          <span>15+ Years of Industry Experience</span>
        </li>
        <li class="flex items-start">
          <svg class="h-5 w-5 text-green-500 mt-1 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
          </svg>
          <span>Tailored Support for Every Client</span>
        </li>
        <li class="flex items-start">
          <svg class="h-5 w-5 text-green-500 mt-1 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
          </svg>
          <span>%100 Customer Satisfaction</span>
        </li>
      </ul>
      <div data-aos="fade-up">
        <a href="#contact" class="inline-block bg-[#1c1c1c] text-white px-6 py-3 rounded-lg font-medium hover:bg-opacity-90 transition">Work With Us</a>
      </div>
    </div>
    <div class="relative" data-aos="fade-left">
      <img src="/images/construction.jpg" alt="Construction Site" class="rounded-xl shadow-2xl">
      <div class="absolute -bottom-6 -right-6 bg-white p-4 rounded-lg shadow-lg hidden md:block">
        <div class="text-3xl font-bold text-[#1c1c1c]">15+</div>
        <div class="text-sm">Years of Experience</div>
      </div>
    </div>
  </div>
</section>

<!-- Projects -->
<section id="projects" class="py-20 px-6 bg-white">
  <div class="max-w-6xl mx-auto">
    <div class="flex justify-between items-center mb-12">
      <h2 class="text-4xl font-semibold" data-aos="fade-up">Our Projects</h2>
    </div>

    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8">
      <% projects.forEach(project => { %>
        <a href="/projects/<%= project.slug %>" class="group relative overflow-hidden rounded-xl shadow-lg block" data-aos="fade-up">
          <img src="<%= project.coverImage %>" class="w-full h-64 object-cover transition-transform duration-500 group-hover:scale-110" />
          <div class="absolute inset-0 bg-gradient-to-t from-black/70 via-black/30 to-transparent flex flex-col justify-end p-6">
            <h3 class="text-white text-xl font-semibold mb-2"><%= project.title_eng %></h3>
            <div class="text-white font-medium flex items-center group-hover:text-yellow-300 transition">
              Detaylar
              <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3"></path>
              </svg>
            </div>
          </div>
        </a>
      <% }) %>
    </div>
  </div>
</section>



<!-- Process -->

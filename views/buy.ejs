<%- include("partials/header") %>

    <div class="container">
        <header class="content-header">
            <!-- SVG Background Elements -->
            <svg class="svg-bg svg-bg-1" viewBox="0 0 200 200" xmlns="http://www.w3.org/2000/svg">
